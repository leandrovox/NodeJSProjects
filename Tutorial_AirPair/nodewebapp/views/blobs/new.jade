extends ..\layout

block content
    h1.
        #{title}
    form#formaAddBlob(name="addBlob", method="post", action="/blobs")
        p Name:
            input#inputName(type="text", placeholder="ex. John Smith", name="name")
        p Badge:
            input#inputBadge(type="number", placeholder="123456", name="badge")
        p DOB:
            input#inputDOB(type="date", name="dob")
        p Are You Loved?:
            input#inputIsLoved(type="checkbox", name="isloved")
        p
            button#btnSubmit(type="submit") Submit
